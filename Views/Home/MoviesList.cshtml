@{
    ViewBag.Title = "Movies";
}

@model IEnumerable<AddMovieModel>
    <!--view to list all movies in database-->
    <div>

        <table class="table table-bordered table-striped">
            <thead class="text-center">
                <tr><th>ID</th><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.MovieId</td>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                        <td>
                            <form asp-action="MoviesList" method="post">
                                <input type="hidden" name="movieId" asp-for="@x.MovieId" />
                                <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                            </form>
                            <br />
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="movieId" asp-for="@x.MovieId" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
        <div class="text-center">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="AddMovie"><h2>Click to Add a Movie</h2></a>
        </div>

    </div>

