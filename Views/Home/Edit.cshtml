@{
    ViewBag.Title = "Edit a Movie";
}
@model Assignment3.Models.AddMovieModel
<!--view to edit
    pulls in movie that was passed in
    -->

<form asp-action="Edit" method="post" class="text-center">
    <div>
        <label asp-for="MovieId">Movie Id:</label>
        <input asp-for="@Model.MovieId" readonly />
    </div>
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="@Model.Category" />
    </div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="@Model.Title" />
    </div>
    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="@Model.Year" />
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="@Model.Director" />
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="@Model.Rating">
            <option value=""></option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited">Edited?</label>
        <select asp-for="@Model.Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="@Model.LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="@Model.Notes" />
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit" class="btn btn-primary">Save Changes</button>

</form>





